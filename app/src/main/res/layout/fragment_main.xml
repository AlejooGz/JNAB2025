<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".MainFragment">

    <Button
        android:id="@+id/btnListSimposios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simposios"
        android:backgroundTint="@color/dark_red"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVerAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Agenda"
        android:backgroundTint="@color/dark_red"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnListSimposios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFeedNovedades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Novedades"
        android:backgroundTint="@color/dark_red"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnVerAgenda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnMisSimposios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Simposios (Organizador)"
        android:backgroundTint="@color/dark_red"
        android:textColor="@color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFeedNovedades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnTramite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Trabajo"
        android:visibility="gone"
        android:backgroundTint="@color/dark_red"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/btnFeedNovedades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnMisTramites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mis Trabajos"
        android:backgroundTint="@color/dark_red"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnTramite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
